<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AudioMark.Views.GraphView.GraphView"
             Bounds="{Binding ViewBounds, ElementName=GraphView, Mode=OneWayToSource}"
             Name="GraphView">

  <Canvas HorizontalAlignment="Stretch" Name="img"
         VerticalAlignment="Stretch" PointerMoved="OnPointerMoved" PointerEnter="OnPointerEnter" PointerLeave="OnPointerLeave">    
    <Image Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Stretch" Name="BackgroundImage"
           VerticalAlignment="Stretch" />
    <Image Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Stretch" Name="DataImage"
           VerticalAlignment="Stretch" />
    <Image Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Stretch" Name="CursorsImage"
           VerticalAlignment="Stretch" x:Class="AudioMark.Views.GraphView.GraphView.CursorImage" />    
  </Canvas>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AudioMark.Views.MeasurementSettings.Common.CorrectionProfileView">
  <Grid HorizontalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="16" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <CheckBox Classes="Inline" Grid.Column="0" Grid.Row="0" IsChecked="{Binding ApplyCorrectionProfile}">Apply correction profile:</CheckBox>

    <TextBlock Grid.Column="0" Grid.Row="1" Classes="Inline" Text="{Binding ProfileFileName}" MaxWidth="160" HorizontalAlignment="Left" />
    <Button Classes="Inline Icon LoadIcon" Grid.Column="1" Grid.Row="1" Width="54" HorizontalAlignment="Left" Command="{Binding Load}">Load...</Button>
  </Grid>
</UserControl>

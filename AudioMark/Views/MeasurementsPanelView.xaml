<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="450"
             x:Class="AudioMark.Views.MeasurementsPanelView"> 
  <Canvas HorizontalAlignment="Stretch">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
      <ComboBox Name="measurements" Items="{Binding Items}" Width="360" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
      </ComboBox>
      <StackPanel Orientation="Horizontal">
        <Button Classes="Icon NoText LoadIcon"/>
        <Button Classes="Icon NoText SaveIcon"/>
        <Button Classes="Icon NoText RefreshIcon"/>
        
        <Button Classes="Icon PlayIcon" Command="{Binding Run}" Margin="10 0 0 0" IsVisible="{Binding !Running}" >
          Run
        </Button>
        <Button Classes="Icon StopIcon" Command="{Binding Run}" Margin="10 0 0 0" IsVisible="{Binding Running}" >
          Stop
        </Button>

      </StackPanel>
      <ScrollViewer>
        <ContentControl Content="{Binding Content}" />
      </ScrollViewer>
    </StackPanel>
  </Canvas>
</UserControl>

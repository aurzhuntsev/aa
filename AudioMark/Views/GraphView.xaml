<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AudioMark.Views.GraphView"
             Bounds="{Binding ViewBounds, Mode=OneWayToSource}"
             Name="GraphView">

  <Image HorizontalAlignment="Stretch" Name="img"
         VerticalAlignment="Stretch" PointerMoved="OnPointerUpdate" PointerEnter="OnPointerUpdate" PointerLeave="OnPointerLeave"
         />

</UserControl>

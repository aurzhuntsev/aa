<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Models\" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
    <AvaloniaResource Remove="Controls\PropertySection.xaml" />
    <AvaloniaResource Remove="Styles\BaseTheme.xaml" />
    <AvaloniaResource Remove="Styles\Icons.xaml" />
    <AvaloniaResource Remove="Views\MeasurementsPanelView.xaml" />
    <AvaloniaResource Remove="Views\Measurements\Common\InputOutputLevelView.xaml" />
    <AvaloniaResource Remove="Views\Measurements\NoiseMeasurementView.xaml" />
    <AvaloniaResource Remove="Views\Measurements\ThdMeasurementView.xaml" />
    <Folder Include="Views\Common\" />
    <None Remove="Controls\PropertySection.xaml" />
    <None Remove="Styles\BaseTheme.xaml" />
    <None Remove="Styles\Icons.xaml" />
    <None Remove="Views\MeasurementsPanelView.xaml" />
    <None Remove="Views\Measurements\Common\InputOutputLevelView.xaml" />
    <None Remove="Views\Measurements\NoiseMeasurementView.xaml" />
    <None Remove="Views\Measurements\ThdMeasurementView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.0" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.0" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.0" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Controls\PropertySection.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Styles\Icons.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Styles\BaseTheme.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\MeasurementsPanelView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Measurements\ThdMeasurementView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Measurements\NoiseMeasurementView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Measurements\Common\InputOutputLevelView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AudioAnalyzer\AudioMark.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Controls\PropertySection.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
